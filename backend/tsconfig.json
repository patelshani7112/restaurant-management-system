/*
 * PATH: backend/tsconfig.json
 * This is the TypeScript compiler configuration file. It specifies the root files
 * and the compiler options required to compile the project.
 */
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022", // Compile to a modern ECMAScript version
    "lib": ["ES2022"], // Include latest ES features

    /* Modules */
    "module": "NodeNext", // Use the modern Node.js module system
    "moduleResolution": "NodeNext", // How modules get resolved
    "resolveJsonModule": true, // Allows importing .json files

    /* Emit */
    "outDir": "./dist", // Where to output compiled JavaScript files
    "noEmitOnError": true, // Do not emit files if any errors are found

    /* Interop Constraints */
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforces case-sensitive file naming

    /* Type Checking */
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true // Skip type checking of declaration files (.d.ts)
  },
  "include": ["src/**/*"], // Which files to include in the compilation
  "exclude": ["node_modules"] // Which files to exclude
}
